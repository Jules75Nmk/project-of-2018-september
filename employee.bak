 .form-area input[type="password"]{
   border:none;
	border-bottom:1px solidd#ffffff;
	background-color:unset;
	outline:none;
	height:40px;
		top: 50PX;
	left: arc(-50%,-50px);
border-radius:20px;
}
::placeholder{
color:blue;
}.form-area select{
	margin-top:20px;
	padding:10px 0;
	font-size: 40px;
	font-family: elephant;
}
.form-area input[type="button"]
{
	border:none;
	outline: none;
	height: 40px;
	background:orange;
	color:green;
	font-size:28px;
